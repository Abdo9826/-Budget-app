<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<nav class = "navbar navbar-dark bg-primary">
<%= link_to '<', :back, :class => "  big a text-light"%> 
<h2 class = "text-light center">REGISTER</h2>
<%= f.submit "Next", :class => "btn btn-primary top" %>
</nav>

  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
  <%= f.text_field :name, autofocus: true, autocomplete: "name",  placeholder: 'Full name', :class => 'form-control bg-white border-right-0 border-left-0 rounded-0' %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder: 'Email', :class => 'form-control bg-white border-right-0 border-left-0 rounded-0' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password",  placeholder: 'Password', :class => 'form-control bg-white border-right-0 border-left-0 rounded-0' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",  placeholder: 'confirm Password', :class => 'form-control bg-white border-right-0 border-left-0 rounded-0' %>
  </div>

<% end %>

